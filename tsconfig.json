{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false
    },
    "exclude": ["node_modules"],
    "ts-node": {
        "files": true
    }
}